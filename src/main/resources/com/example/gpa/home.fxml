<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.example.gpa.controllers.HomeController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="header">
            <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
            <Label style="-fx-font-size:20px; -fx-font-weight:bold;" text="Welcome to GPA Calculator" />
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="20">
            <Button fx:id="startButton" onAction="#handleStart" text="Start GPA Calculator" />
        </VBox>
    </center>
</BorderPane>
